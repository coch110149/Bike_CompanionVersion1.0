<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                                             xmlns:app = "http://schemas.android.com/apk/res-auto"
                                             xmlns:tools = "http://schemas.android.com/tools"
                                             android:layout_width = "match_parent"
                                             android:layout_height = "match_parent"
                                             tools:context = "cochrane.bike_companion.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
            android:id = "@+id/cardView2"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            app:cardBackgroundColor = "#fd8701"
            app:cardElevation = "4dp"
            android:layout_marginTop = "24dp"
            app:layout_constraintTop_toBottomOf = "@+id/cardView4"
            android:layout_marginEnd = "16dp"
            app:layout_constraintRight_toRightOf = "parent"
            android:layout_marginStart = "16dp"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintHorizontal_bias = "0.0">

        <android.support.constraint.ConstraintLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                tools:layout_editor_absoluteX = "8dp"
                tools:layout_editor_absoluteY = "8dp">

            <TextView
                    android:id = "@+id/title"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "16dp"
                    android:layout_marginTop = "16dp"
                    android:text = "Riding Buddies"
                    android:textSize = "24sp"
                    app:layout_constraintLeft_toLeftOf = "parent"
                    app:layout_constraintTop_toTopOf = "parent" />

            <TextView
                    android:id = "@+id/activated_groups"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "0dp"
                    android:layout_marginTop = "16dp"
                    app:layout_constraintLeft_toLeftOf = "@+id/title"
                    app:layout_constraintTop_toBottomOf = "@+id/title"
                    />

            <Button
                    android:id = "@+id/manage_groups"
                    style = "@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "16dp"
                    android:layout_marginTop = "16dp"
                    android:text = "Manage Groups"
                    app:layout_constraintLeft_toLeftOf = "parent"
                    app:layout_constraintTop_toBottomOf = "@+id/activated_groups" />

            <Button
                    android:id = "@+id/test_notifications"
                    style = "@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "8dp"
                    android:text = "Test Notifications"
                    app:layout_constraintBaseline_toBaselineOf = "@+id/manage_groups"
                    app:layout_constraintLeft_toRightOf = "@+id/manage_groups" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:id = "@+id/cardView4"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "16dp"
            android:layout_marginEnd = "16dp"
            android:layout_marginTop = "16dp"
            app:cardBackgroundColor = "#39dbe1"
            app:cardElevation = "4dp"
            app:layout_constraintHorizontal_bias = "0.0"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintTop_toTopOf = "parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent">

            <ImageView
                    android:id = "@+id/imageView3"
                    android:layout_width = "201dp"
                    android:layout_height = "124dp"
                    android:layout_marginEnd = "8dp"
                    android:layout_marginStart = "8dp"
                    android:adjustViewBounds = "true"
                    android:background = "#39dbe1"
                    android:cropToPadding = "true"
                    app:layout_constraintLeft_toLeftOf = "parent"
                    app:layout_constraintRight_toRightOf = "parent"
                    app:layout_constraintTop_toTopOf = "parent"
                    app:srcCompat = "@mipmap/dribbble_1x"
                    tools:ignore = "ContentDescription" />

            <TextView
                    android:id = "@+id/bike_name"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginStart = "16dp"
                    android:layout_marginTop = "16dp"
                    android:text = "Current Bike"
                    android:textAppearance = "@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintLeft_toLeftOf = "parent"
                    app:layout_constraintTop_toTopOf = "@+id/guideline2" />

            <TextView
                    android:id = "@+id/duration"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginTop = "8dp"
                    android:text = "TextView"
                    app:layout_constraintLeft_toLeftOf = "@+id/bike_name"
                    app:layout_constraintTop_toBottomOf = "@+id/bike_name"
                    android:layout_marginStart = "0dp" />

            <Button
                    android:id = "@+id/swap_bikes"
                    style = "@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginTop = "8dp"
                    android:text = "Swap Bikes"
                    app:layout_constraintLeft_toLeftOf = "@+id/duration"
                    app:layout_constraintTop_toBottomOf = "@+id/duration"
                    android:layout_marginStart = "0dp" />

            <android.support.constraint.Guideline
                    android:id = "@+id/guideline2"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:orientation = "horizontal"
                    app:layout_constraintGuide_begin = "116dp"
                    tools:layout_editor_absoluteX = "8dp"
                    tools:layout_editor_absoluteY = "716dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
            android:id = "@+id/floatingActionButton"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:clickable = "true"
            app:fabSize = "mini"
            app:srcCompat = "@drawable/ic_directions_bike_white_24px"
            android:layout_marginRight = "16dp"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintBottom_toBottomOf = "parent"
            android:layout_marginBottom = "16dp" />

</android.support.constraint.ConstraintLayout>
