<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                                             xmlns:app = "http://schemas.android.com/apk/res-auto"
                                             xmlns:tools = "http://schemas.android.com/tools"
                                             android:layout_width = "match_parent"
                                             android:layout_height = "72dp"
                                             android:layout_marginTop = "8dp"
                                             android:orientation = "vertical">

    <TextView
            android:id = "@+id/duration"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "TextView"
            android:layout_marginStart = "16dp"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            android:layout_marginTop = "8dp" />

    <TextView
            android:id = "@+id/duration"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "0dp"
            android:layout_marginTop = "16dp"
            android:text = "TextView"
            app:layout_constraintLeft_toLeftOf = "@+id/duration"
            app:layout_constraintTop_toBottomOf = "@+id/duration" />

    <TextView
            android:id = "@+id/bike_name"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "8dp"
            android:layout_marginTop = "0dp"
            android:text = "TextView"
            app:layout_constraintLeft_toRightOf = "@+id/duration"
            app:layout_constraintTop_toTopOf = "@+id/duration" />

    <TextView
            android:id = "@+id/ride_date"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "8dp"
            android:layout_marginEnd = "0dp"
            android:layout_marginTop = "16dp"
            android:text = "TextView"
            app:layout_constraintLeft_toRightOf = "@+id/duration"
            app:layout_constraintRight_toRightOf = "@+id/bike_name"
            app:layout_constraintTop_toBottomOf = "@+id/bike_name" />
</android.support.constraint.ConstraintLayout>